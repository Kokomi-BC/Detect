{
  "name": "fake-news-detector",
  "version": "1.2.1",
  "description": "假新闻检测应用",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build:renderer": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build": "npm run build:renderer && electron-builder",
    "dev": "concurrently \"npm run build:dev -- --watch\" \"wait-on dist/index.html && electron .\"",
    "package": "electron-builder --dir",
    "make": "electron-builder --win",
    "make:portable": "electron-builder --win --x64 --config.portable.target=portable",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "fake-news",
    "detector"
  ],
  "author": "Kokomi-BC",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kokomi-BC/Detect.git"
  },
  "bugs": {
    "url": "https://github.com/Kokomi-BC/Detect/issues"
  },
  "homepage": "https://github.com/Kokomi-BC/Detect#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.6.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "cheerio": "^1.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "jsdom": "22.1.0",
    "openai": "^6.9.1"
  },
  "build": {
    "appId": "com.detectfake.app",
    "productName": "假新闻检测应用",
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "假新闻检测"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "publish": null
  }
}
