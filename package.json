{
  "name": "fake-news-detector",
  "version": "2.0.1",
  "description": "假新闻检测应用",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build:renderer": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build": "npm run build:renderer && electron-builder",
    "dev": "concurrently \"npm run build:dev -- --watch\" \"wait-on dist/Welcome.html && electron .\"",
    "package": "electron-builder --dir",
    "make": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "fake-news",
    "detector"
  ],
  "author": "Kokomi-BC",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kokomi-BC/Detect.git"
  },
  "bugs": {
    "url": "https://github.com/Kokomi-BC/Detect/issues"
  },
  "homepage": "https://github.com/Kokomi-BC/Detect#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.5",
    "wait-on": "^9.0.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "cheerio": "^1.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "jsdom": "^27.3.0",
    "openai": "^6.15.0",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.detectfake.app",
    "productName": "假新闻检测应用",
    "icon": "ico/Detect.ico",
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json",
      "ico/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "假新闻检测"
    },
    "publish": null
  }
}
